
<!-- Jose Igualada Calero -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#a6787a77">

    <ToggleButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tbFondo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:checked="true"
        android:contextClickable="false"
        android:textOff="Fondo Rojo"
        android:textOn="Fondo Blanco" />

    <ToggleButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tbTexto"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tbFondo"
        android:layout_alignStart="@+id/tbFondo"
        android:layout_marginRight="25dp"
        android:checked="true"
        android:textOff="Letras Verdes"
        android:textOn="Letras Negras" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar"
        android:id="@+id/cbMostrar"
        android:layout_alignStart="@+id/tbTexto"
        android:layout_below="@+id/tbTexto"
        android:layout_marginTop="35dp"
        android:checked="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensaje Oculto"
        android:id="@+id/txtOculto"
        android:layout_marginEnd="48dp"
        android:layout_alignEnd="@+id/tbTexto"
        android:layout_alignBaseline="@+id/cbMostrar"
        android:gravity="center_horizontal"
        android:textColor="#010101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haz un click largo"
        android:id="@+id/txtLargo"
        android:gravity="center_horizontal"
        android:layout_below="@+id/cbMostrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:textColor="#010101" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/txtLargo"
        android:layout_centerHorizontal="true"
        android:background="#ffffff">

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rtEstrellas"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEstrellas"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#010101"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/rtEstrellas" />

    </RelativeLayout>

</RelativeLayout>
